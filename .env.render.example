# Render.com Environment Variables Guide
# Copy these to your Render.com service environment variables

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Firebase Configuration  
FIREBASE_CONFIG=your_firebase_config_here

# VIN API Configuration
VIN_API_KEY=your_vin_api_key_here
VIN_API_URL=your_vin_api_url_here

# Payment Configuration
PAYMENT_API_KEY=your_payment_api_key_here
PAYMENT_WEBHOOK_SECRET=your_webhook_secret_here

# Node Environment
NODE_ENV=production

# Puppeteer Configuration (for Render.com)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# Memory limits for Render.com
NODE_OPTIONS="--max-old-space-size=1024"
